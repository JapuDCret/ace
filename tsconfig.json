{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],

    "baseUrl": "src",
    "paths": {
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"],
    }
  },
  "exclude": ["build", "node_modules", "plugins"]
}
